{%- liquid
  assign subheading = section.settings.subheading
  assign heading = section.settings.title
  assign bg_color_secondary = section.settings.bg_color_secondary
  assign animations_enabled = settings.animations_enabled
  assign animation_anchor = '#Locations--' | append: section.id
  assign animation_delay = 150

  comment
    Images sizes
  endcomment
  # Desktop widths
  assign wrapper_width_lg = '(1440px - 120px)'
  assign img_width_lg = 'calc(' | append: wrapper_width_lg | append: ' / 2)'
  # Tablet widths
  assign wrapper_width_md = '(100vw - 2 * 20px)'
  assign img_width_md = 'calc(' | append: wrapper_width_md | append: ' / 2)'
  # Mobile widths
  assign img_width_sm = 'calc(' | append: wrapper_width_md | append: ')'

  assign sizes = '(min-width: 1024px) ' | append: img_width_lg | append: ', (min-width: 768px) ' | append: img_width_md | append: ', ' | append: img_width_sm
-%}

{%- style -%}
  #Locations--{{ section.id }} {
    --PT: {{ section.settings.padding_top }}px;
    --PB: {{ section.settings.padding_bottom }}px;
  }

  /* Location Store Layout */
  .location__store {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .location__store > * {
    margin-left: auto;
    margin-right: auto;
  }

  /* Button specific adjustments */
  .location__button {
    margin-top: 20px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Mobile button full width */
  @media (max-width: 767px) {
    .location__button {
      width: 100% !important;
      max-width: none !important;
    }
  }

  /* Ensure icon has proper spacing */
  .location_bottom_icon {
    display: block;
    margin-top: 16px;
    margin-bottom: 0;
    margin-left: auto;
    margin-right: auto;
  }

  .location__icon-wrapper {
    margin-left: auto;
    margin-right: auto;
  }

  /* Center Flickity navigation arrows */
  .locations__stores .flickity-page-dots {
    text-align: center;
    width: 100%;
  }

  .locations__stores .flickity-prev-next-button {
    position: relative !important;
    display: inline-block !important;
    margin: 20px 10px 0 10px !important;
    position: static !important;
    transform: none !important;
  }

  .locations__stores .flickity-button-group {
    display: flex;
    justify-content: center;
    margin-top: 20px;
  }

  /* Alternative approach if buttons are rendered differently */
  .locations__stores {
    position: relative;
  }

  .locations__stores [data-slider-info] + div,
  .locations__stores .slider-nav,
  .locations__stores .flickity-nav {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    width: 100%;
  }

  @media (max-width: 767px) {
    .location__button {
      width: 100%;
      max-width: 280px;
    }
  }
{%- endstyle -%}

<div
  id="Locations--{{ section.id }}"
  class="section-padding locations{% if bg_color_secondary %} bg-secondary{% endif %}"
>
  <div class="locations__wrapper">
    <div class="wrapper">
      <div class="locations__info">
        {%- if subheading != blank or heading != blank -%}
          <div class="section__header text-left">
            {%- if subheading != blank -%}
              <p
                class="locations__info-subheading subheading-text"
                {% if animations_enabled %}
                  data-aos="fade-up"
                  data-aos-anchor="{{ animation_anchor }}"
                  data-aos-delay="{{ animation_delay }}"
                  {%- assign animation_delay = animation_delay | plus: 150 -%}
                {% endif %}
              >
                {{ subheading }}
              </p>
            {% endif %}

            {%- if heading != blank -%}
              <h2
                class="locations__info-heading"
                {% if animations_enabled %}
                  data-aos="fade-up"
                  data-aos-anchor="{{ animation_anchor }}"
                  data-aos-delay="{{ animation_delay }}"
                  {%- assign animation_delay = animation_delay | plus: 150 -%}
                {% endif %}
              >
                {{ heading -}}
                <span class="red_dot"></span>
              </h2>
              {%- if settings.show_spacer_lines -%}
                <hr
                  class="section__heading-line"
                  {% if animations_enabled %}
                    data-aos="fade-up"
                    data-aos-anchor="{{ animation_anchor }}"
                    data-aos-delay="{{ animation_delay }}"
                    {%- assign animation_delay = animation_delay | plus: 150 -%}
                  {% endif %}
                >
              {%- endif -%}
            {%- endif -%}
          </div>
        {%- endif -%}

        <div
          class="locations__stores"
          data-slider-info
          {% if animations_enabled %}
            data-aos="fade-up"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-delay="{{ animation_delay }}"
            {%- assign animation_delay = 150 -%}
          {% endif %}
        >
          {%- if section.blocks.size > 0 -%}
            {%- for block in section.blocks -%}
              <div class="location__store" {{ block.shopify_attributes }} data-slide-item>
                {%- if block.settings.title != blank -%}
                  <h3 class="location__address h4">{{ block.settings.title }}</h3>
                {%- endif -%}

                {%- if block.settings.working_time != blank -%}
                  {{- block.settings.working_time -}}
                {%- endif -%}

                {% if block.settings.icon != blank %}
                  <div class="location__icon-wrapper">
                    <a href="{{ block.settings.icon_url }}" target="_blank">
                      <img class="location_bottom_icon" src="{{ block.settings.icon | img_url: 'master' }}">
                    </a>
                  </div>
                {% endif %}

                {%- comment -%} Custom Button - positioned at the very bottom {%- endcomment -%}
                {%- if block.settings.button_text != blank and block.settings.button_link != blank -%}
                  {%- liquid
                    case block.settings.button_style
                      when 'primary'
                        assign button_class = 'location__button slide__btn btn btn--solid btn--small btn--black'
                      when 'secondary'
                        assign button_class = 'location__button slide__btn btn btn--outline btn--small btn--black'
                      else
                        assign button_class = 'location__button slide__btn btn btn--outline btn--small btn--black'
                    endcase
                    
                    assign target = ''
                    if block.settings.button_new_tab
                      assign target = 'target="_blank" rel="noopener noreferrer"'
                    endif
                  -%}
                  <a 
                    href="{{ block.settings.button_link }}" 
                    class="{{ button_class }}"
                    {{ target }}
                  >
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>
            {%- endfor -%}
          {%- else -%}
            {%- for i in (1..3) -%}
              <div class="location__store" data-slide-item>
                <h3 class="location__address h4">{{ 'homepage.onboarding.locations.address' | t }}</h3>

                {{ 'homepage.onboarding.locations.working_hours_html' | t }}

                {%- comment -%} Default button for demo {%- endcomment -%}
                <a href="#" class="location__button location__button--primary">
                  Get Directions
                </a>
              </div>
            {%- endfor -%}
          {%- endif -%}
        </div>
      </div>
    </div>

    {%- if section.blocks.size > 0 -%}
      <div
        class="locations__gallery"
        data-slider-gallery
        {% if animations_enabled %}
          data-aos="fade"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-delay="{{ animation_delay }}"
        {% endif %}
      >
        {%- for block in section.blocks -%}
          {%- render 'image-fill',
            img_object: block.settings.image,
            sizes: sizes,
            aspect_ratio: 1,
            classes: 'location__image'
          -%}
        {%- endfor -%}
      </div>
    {%- else -%}
      <div
        class="locations__gallery"
        data-slider-gallery
        {% if animations_enabled %}
          data-aos="fade"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-delay="{{ animation_delay }}"
        {% endif %}
      >
        {%- for i in (1..3) -%}
          {%- render 'image-fill', img_object: '', aspect_ratio: 1, classes: 'location__image' -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>